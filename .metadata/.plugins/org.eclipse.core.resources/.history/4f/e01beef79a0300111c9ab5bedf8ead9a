/* USER CODE BEGIN 4 */

/* USER CODE END 4 */

/* USER CODE BEGIN Header_StartBaroTask */
/**
  * @brief  Function implementing the BaroTask thread.
  * @param  argument: Not used
  * @retval None
  */
/* USER CODE END Header_StartBaroTask */
void StartBaroTask(void *argument)
{
  /* USER CODE BEGIN 5 */

	// --- 1. CONFIGURACIÓN INICIAL (Fuera del loop) ---
	    uint8_t config = 0x50;
	    uint8_t raw_press[3];
	    float pressure_hPa, altitude_meters;

	    // IMPORTANTE: Incluso la config inicial debe estar protegida por el Mutex
	    osMutexAcquire(I2C2_MutexHandle, osWaitForever);
	    HAL_I2C_Mem_Write(&hi2c2, LPS22HB_ADDR, 0x10, 1, &config, 1, 100);
	    osMutexRelease(I2C2_MutexHandle);

	    for(;;) {
	        // --- 2. LÓGICA DEL BOTÓN (Calibración) ---
	        if (HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_13) == GPIO_PIN_RESET) {
	            P_referencia = pressure_hPa;
	            osDelay(300);
	        }

	        // --- 3. LECTURA PROTEGIDA ---
	        if (osMutexAcquire(I2C2_MutexHandle, osWaitForever) == osOK) {
	            if (HAL_I2C_Mem_Read(&hi2c2, LPS22HB_ADDR, 0x28 | 0x80, 1, raw_press, 3, 100) == HAL_OK) {
	                uint32_t press_int = (uint32_t)raw_press[2] << 16 | (uint32_t)raw_press[1] << 8 | (uint32_t)raw_press[0];
	                pressure_hPa = (float)press_int / 4096.0f;
	                altitude_meters = 44330.0f * (1.0f - powf(pressure_hPa / P_referencia, 0.1902949f));

	                // --- 4. ENVIAR A LA COLA (En lugar del printf) ---
	                osMessageQueuePut(AltitudQueueHandle, &altitude_meters, 0, 0);
	            }
	            osMutexRelease(I2C2_MutexHandle);
	        }
	        osDelay(100); // Muestreo a 10Hz
	    }
  /* USER CODE END 5 */
}

/* USER CODE BEGIN Header_StartIMU_Task */
/**
* @brief Function implementing the IMU_Task thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartIMU_Task */
void StartIMU_Task(void *argument)
{
  /* USER CODE BEGIN StartIMU_Task */
	IMU_Data_t sensor_real;
	  uint8_t buffer[6];
	  int16_t raw_x, raw_y, raw_z;

	  // 1. ACTIVAR EL SENSOR (Configuración inicial)
	  // Escribimos en el registro CTRL1_XL (0x10) para activar Acelerómetro
	  // y CTRL2_G (0x11) para activar Giroscopio.
	  uint8_t config_reg[2] = {0x60, 0x60}; // 416Hz, 2g / 416Hz, 500dps

	  osMutexAcquire(I2C2_MutexHandle, osWaitForever);
	  HAL_I2C_Mem_Write(&hi2c2, LSM6DSL_ADDR, 0x10, 1, &config_reg[0], 1, 100);
	  HAL_I2C_Mem_Write(&hi2c2, LSM6DSL_ADDR, 0x11, 1, &config_reg[1], 1, 100);
	  osMutexRelease(I2C2_MutexHandle);

	  for(;;) {
	    if (osMutexAcquire(I2C2_MutexHandle, osWaitForever) == osOK) {

	      // 2. LEER 6 BYTES (X, Y, Z - 2 bytes cada uno) empezando en 0x22 (Giroscopio)
	      if (HAL_I2C_Mem_Read(&hi2c2, LSM6DSL_ADDR, 0x22, 1, buffer, 6, 10) == HAL_OK) {

	        // Convertir bytes a enteros de 16 bits
	        raw_x = (int16_t)((buffer[1] << 8) | buffer[0]);
	        raw_y = (int16_t)((buffer[3] << 8) | buffer[2]);
	        raw_z = (int16_t)((buffer[5] << 8) | buffer[4]);

	        // Convertir a grados por segundo (usando sensibilidad para 500dps)
	        sensor_real.x = (float)raw_x * 0.0175f;
	        sensor_real.y = (float)raw_y * 0.0175f;
	        sensor_real.z = (float)raw_z * 0.0175f;

	        osMessageQueuePut(IMU_QueueHandle, &sensor_real, 0, 0);
	      }
	      osMutexRelease(I2C2_MutexHandle);
	    }
	    osDelay(10); // Lectura a 100Hz
	  }


  /* USER CODE END StartIMU_Task */
}

/* USER CODE BEGIN Header_StartTelemetry_Task */
/**
* @brief Function implementing the Telemetry_Task thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartTelemetry_Task */
void StartTelemetry_Task(void *argument)
{
  /* USER CODE BEGIN StartTelemetry_Task */

	IMU_Data_t imu_data;
	float altitud_data;
	uint16_t contador_visual = 0;

	for(;;) {
	    // 1. Recolectar datos (Polling)
	    osMessageQueueGet(IMU_QueueHandle, &imu_data, NULL, 0);
	    osMessageQueueGet(AltitudQueueHandle, &altitud_data, NULL, 0);

	    contador_visual++;

	    // 2. ACTUALIZACIÓN CADA 1 SEGUNDO (100 * 10ms = 1000ms)
	    if (contador_visual >= 100) {
	        // Usamos \r para volver al inicio y muchos espacios al final para borrar basura
	        // %8.2f da espacio para números grandes
	        printf("\r[IMU DPS] X:%7.2f Y:%7.2f Z:%7.2f | [ALT] %7.2f m      ",
	               imu_data.x, imu_data.y, imu_data.z, altitud_data);

	        fflush(stdout); // Obligamos a que salga por el cable
	        contador_visual = 0;
	    }

	    osDelay(10); // Ciclo base de 100Hz
	}
  /* USER CODE END StartTelemetry_Task */
}


/**
  * @brief  Period elapsed callback in non blocking mode
  * @note   This function is called  when TIM6 interrupt took place, inside
  * HAL_TIM_IRQHandler(). It makes a direct call to HAL_IncTick() to increment
  * a global variable "uwTick" used as application time base.
  * @param  htim : TIM handle
  * @retval None
  */
void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
  /* USER CODE BEGIN Callback 0 */

  /* USER CODE END Callback 0 */
  if (htim->Instance == TIM6) {
    HAL_IncTick();
  }
  /* USER CODE BEGIN Callback 1 */

  /* USER CODE END Callback 1 */
}

